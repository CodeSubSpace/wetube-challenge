extends base.pug

block content
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        input(name="title", placeholder="input video title", requied=true)
        input(name="description", placeholder="input video description", requied=true)
        input(name="name", value="Upload Video", type="Submit")
        